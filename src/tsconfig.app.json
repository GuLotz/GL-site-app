{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "/angular/",
    "types": [ "node" ],
    "typeRoots": [ "../node_modules/@types" ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
